{
	  "compilerOptions":{
			"target":"ES5",
			"lib":["ES5"],
			"module": "CommonJS",
			"outDir": "./build",
			"rootDir": "./src",
			"strict": true ,
			"noImplicitAny": false,
			"esModuleInterop": true,
			"skipLibCheck": true,
			"forceConsistentCasingInFileNames": true
	  },

	  "include": ["./src"],
	  
	  "exclude": ["node_modules","spec","build"]

}
